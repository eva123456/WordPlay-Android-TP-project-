<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/deckCard"
        style="@style/cardViewStyle">
        <RelativeLayout
            style="@style/addWordRelativeLayout">

    <LinearLayout
        style="@style/textLayout"
        android:id="@+id/wordLayout">
        <TextView
            android:text="@string/wordLabel"
            android:layout_weight="1"
            style="@style/textLabel18" />
        <EditText
            android:layout_weight="1"
            android:id="@+id/wordInput"
            style="@style/textLabel18" />
    </LinearLayout>

    <LinearLayout
        style="@style/textLayout"
        android:layout_below="@id/wordLayout"
        android:id="@+id/translationLayout">
        <TextView
            android:id="@+id/translation"
            android:text="@string/translationInputLabel"
            android:layout_weight="1"
            style="@style/textLabel18"/>
        <EditText
            android:id="@+id/translationInput"
            android:layout_weight="1"
            style="@style/textLabel18"/>
    </LinearLayout>

    <Button
        android:id="@+id/addWord"
        android:text="@string/createWord"
        style="@style/BigButtonStyle"
        android:layout_below="@id/translationLayout">
    </Button>

</RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>