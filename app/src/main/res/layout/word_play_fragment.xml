<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/checkCard"
        style="@style/wordplayCardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wordDisplay"
                android:text="@string/someWordLabel"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="24sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hintCard"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translationDisplay"
                android:text="@string/someTranslationLabel"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="24sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:padding="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/wordOk"
            android:text="@string/okButton"
            style="@style/SmallButtonStyle"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/wordFail"
            android:text="@string/failButton"
            android:layout_weight="1"
            style="@style/SmallButtonStyle" />

        <Button
            android:id="@+id/showTranslation"
            android:text="@string/hintButton"
            android:layout_weight="1"
            style="@style/SmallButtonStyle" />

    </LinearLayout>

</LinearLayout>